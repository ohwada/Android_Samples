<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    android:elevation="2dp"
    android:clipToPadding="false" >

    <jp.ohwada.android.camera211.ui.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_layout_control_height"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/control_background"  >


        <Button
            android:id="@+id/Button_flip"
            android:text="@string/button_flip" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

    <Space 
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_weight="1" />

        <Button
            android:id="@+id/Button_picture"
            android:text="@string/button_picture" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
            android:layout_weight="1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/autoFocus"
        android:layout_width="@dimen/image_view_autofocus_width"
        android:layout_height="@dimen/image_view_autofocus_height"
        android:src="@drawable/btn_autofocus"
        android:elevation="4dp"
        android:visibility="gone"/>

</FrameLayout>